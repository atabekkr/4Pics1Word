<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".GameActivity">

    <View
        android:id="@+id/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#171F3E"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal"/>

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/btn_back"
        app:layout_constraintStart_toStartOf="@id/view_toolbar"
        app:layout_constraintTop_toTopOf="@id/view_toolbar"
        app:layout_constraintBottom_toBottomOf="@id/view_toolbar"
        android:layout_marginStart="@dimen/margin_standard"/>

    <ImageView
        android:id="@+id/ic_level"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_level"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_horizontal"
        app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal"/>

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="32dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/ic_level"
        app:layout_constraintEnd_toEndOf="@id/ic_level"
        app:layout_constraintTop_toTopOf="@id/ic_level"
        app:layout_constraintBottom_toBottomOf="@id/ic_level"
        tools:ignore="SpUsage" />

    <ImageView
        android:id="@+id/big_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="1dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/ll_images"
        app:layout_constraintEnd_toEndOf="@id/ll_images"
        app:layout_constraintBottom_toBottomOf="@id/ll_images"
        app:layout_constraintTop_toTopOf="@id/ll_images"
        />

    <LinearLayout
        android:id="@+id/ll_images"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical"
        app:layout_constraintEnd_toEndOf="@id/guideline_vertical"
        app:layout_constraintTop_toBottomOf="@id/ic_level"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/photo1_1"
                android:layout_marginEnd="4dp"
                tools:ignore="NestedWeights" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/photo1_2"
                android:layout_marginEnd="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/photo1_3"
                android:layout_marginStart="4dp"
                tools:ignore="NestedWeights" />

            <ImageView
                android:id="@+id/image4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/photo1_4"
                android:layout_marginStart="4dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_option"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin_standard"
        android:layout_marginHorizontal="@dimen/margin_standard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/word_option1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_bg_option"
                android:layout_weight="1"
                android:text="A"
                android:textSize="32dp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/word_option2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_option"
                android:text="A"
                android:textSize="32dp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/word_option3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_option"
                android:text="A"
                android:textSize="32dp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/word_option4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_option"
                android:text="A"
                android:textSize="32dp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/word_option5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_option"
                android:text="A"
                android:textSize="32dp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/word_option6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_option"
                android:text="A"
                android:textSize="32dp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/word_option7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_bg_option"
                android:layout_weight="1"
                android:text="A"
                android:textSize="32dp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/word_option8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_option"
                android:text="A"
                android:textSize="32dp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/word_option9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_option"
                android:text="A"
                android:textSize="32dp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/word_option10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_option"
                android:text="A"
                android:textSize="32dp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/word_option11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_option"
                android:text="A"
                android:textSize="32dp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/word_option12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_option"
                android:text="A"
                android:textSize="32dp"
                android:textAlignment="center"
                android:layout_margin="2dp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/bg_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#B3000000"/>

    <ImageView
        android:id="@+id/iv_shine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/success_ray_blue"
        app:layout_constraintTop_toTopOf="@+id/ll_answers"
        app:layout_constraintBottom_toBottomOf="@id/ll_answers"/>

    <LinearLayout
        android:id="@+id/ll_answers"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/ll_images"
        app:layout_constraintBottom_toTopOf="@id/btn_option"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/margin_standard">

        <TextView
            android:id="@+id/word_answer1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_answer_bg"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/word_answer2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_answer_bg"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/word_answer3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_answer_bg"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/word_answer4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_answer_bg"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/word_answer5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_answer_bg"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/word_answer6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_answer_bg"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/word_answer7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_answer_bg"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/word_answer8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_answer_bg"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:textAlignment="center"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/play_btn_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_answers"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_continue"
        android:textSize="32dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/play_btn"
        app:layout_constraintEnd_toEndOf="@id/play_btn"
        app:layout_constraintTop_toTopOf="@id/play_btn"
        app:layout_constraintBottom_toBottomOf="@id/play_btn"
        tools:ignore="SpUsage" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08"/>
    
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>